<% include ../partials/header %>
    <h3> Add Games </h3>
    <form enctype="multipart/form-data" method="post" action="/games/add">
        <div class="form-group">
            <label> Game Name </label>
            <input type="text" class="form-control" name="game_name" placeholder="Game Name">
        </div>
        <div class="form-group">
            <label> Developer </label>
            <input type="text" class="form-control" name="game_developer" placeholder="Game Developer">
        </div>
        <div class="form-group">
            <label> Game Publisher </label>
            <input type="text" class="form-control" name="game_publisher" placeholder="Game Publisher">
        </div>
        <div class="form-group">
            <label> Year Released </label>
            <input type="text" class="form-control" name="year_released" placeholder="Year Released">
        </div>
        <div class="form-group">
            <label> Genre </label>
            <select name="genre" class="form-control">
                <% for(var i = 0; i < genres.length; i++) {%>
                    <option value="<% genres[i].name %>"> 
                        <%= genres[i].name %>
                    </option>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label> Review </label>
            <textarea class="form-control" name="review" placeholder="Your review on the game."></textarea>
        </div>
        <div class="form-group">
            <label> Rating </label>
            <select class="form-control" name="rating">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="form-group">
            <label> Game Cover </label>
            <input type="file" class="form-control" name="cover">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        <a class="btn btn-danger" href="/games">Close</a>
    </form>

    <% include ../partials/footer %>